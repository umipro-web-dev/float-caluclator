{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
        "@/*": ["./src/*"],
        "@errors/*": ["./src/errors/*"],
        "@methods/*": ["./src/methods/*"],
        "@thisTypes/*": ["./src/types/*"],
        "@methods_private/*": ["./src/methods_private/*"]
    },

    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
